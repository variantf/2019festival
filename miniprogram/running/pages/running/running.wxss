.answer_bg{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width:100%;
  height:100%;
}
.answer_fig{
  position: fixed;
  z-index: 2;
  width:60%;
  height:25%;
  right:0%;
  bottom:0%
}
.number{
  position: absolute;
  top:13%;
  
  align-items:center; 
  z-index: 2;
  color:#eb3223;
  font-size: 80rpx;
  font-family: 'default';
}
.number_line{
  position: fixed;
  z-index: 2;
  top:15%;
}
.question_frame{
  position: fixed;
  z-index: 2;
  top:30%;
  bottom:25%;
