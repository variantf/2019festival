@-webkit-keyframes shine {
  0% {
    mix-blend-mode: normal;
  }
  50% {
    mix-blend-mode: overlay; 
  }
  100% {
    mix-blend-mode: normal; 
  }
}
.present_bg{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width:100%;
  height:100%;
  animation-name: shine;
  animation-duration: 0.5s;
  animation-iteration-count: infinite;
  transform-origin: top;
}
.present_button{
  position: fixed;
  z-index: 2;
  width:45%;
  height:12%;
  top:80%;
  font-size: 70rpx;
  text-align: center;
}