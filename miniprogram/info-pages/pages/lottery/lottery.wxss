/* miniprogram/pages/index6/index.wxss */
@-webkit-keyframes shine {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 1; 
  }
  100% {
    opacity: 0; 
  }
}
.present_bg{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width:100%;
  height:100%;
}

.stars {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width:100%;
  height:100%;
  animation-name: shine;
  animation-duration: 0.5s;
  animation-iteration-count: infinite;
}
.present_button{
  position: fixed;
  z-index: 2;
  width:45%;
  height:12%;
  top:80%;
  font-size: 70rpx;
  text-align: center;
}

.content {
  position: absolute;
  top: 60%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  font-family: 'default';
  font-size: 60rpx;
  color: white;
  z-index: 5;
}

.logo {
  width: 200rpx;
  height: 150rpx;
}

.row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}